<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="552.0" prefWidth="406.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cz.cuni.milanenm.controllers.ControllerStart">

    <children>
        <!-- Background: fill window exactly (no white bars) -->
        <ImageView fitHeight="552.0" fitWidth="406.0" layoutX="0.0" layoutY="0.0"
                   pickOnBounds="true" preserveRatio="false">
            <image><Image url="@../img/start.png"/></image>
        </ImageView>

        <!-- Header -->
        <AnchorPane layoutY="-1.0" prefHeight="135.0" prefWidth="406.0">
            <children>
                <Text fx:id="currentDate" fill="#81adb5" layoutX="22.0" layoutY="30.0" wrappingWidth="137.14">
                    <font><Font name="Times New Roman Bold" size="16.0"/></font>
                </Text>
                <Text fx:id="currentTime" fill="#81ADB5" layoutX="248.0" layoutY="30.0"
                      textAlignment="RIGHT" wrappingWidth="137.14">
                    <font><Font name="Times New Roman Bold" size="16.0"/></font>
                </Text>
                <Text fill="#81ADB5" layoutX="-1.0" layoutY="106.0"
                      text="What about weather?" textAlignment="CENTER" wrappingWidth="406.0">
                    <font><Font name="Times New Roman Bold" size="26.0"/></font>
                </Text>
            </children>
        </AnchorPane>

        <!-- Actions -->
        <Button fx:id="getPrague" layoutX="225.0" layoutY="270.0" mnemonicParsing="false"
                prefHeight="40.0" prefWidth="150.0" text="NOW IN PRAGUE" textAlignment="CENTER" textFill="#1B3365">
            <font><Font name="Times New Roman Bold" size="12.0"/></font>
        </Button>
        <Button fx:id="getWorld" layoutX="225.0" layoutY="350.0" mnemonicParsing="false"
                prefHeight="40.0" prefWidth="150.0" text="NOW IN THE WORLD" textAlignment="CENTER" textFill="#1b3365">
            <font><Font name="Times New Roman Bold" size="12.0"/></font>
        </Button>
        <Button fx:id="getForecast" layoutX="225.0" layoutY="430.0" mnemonicParsing="false"
                prefHeight="40.0" prefWidth="150.0" text="5 DAYS AHEAD..." textAlignment="CENTER" textFill="#1B3365">
            <font><Font name="Times New Roman Bold" size="12.0"/></font>
        </Button>
    </children>
</AnchorPane>
